<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block stylesheets %}
        <link rel="stylesheet" href="/style.css">
    {% endblock %}
    <title>Authorization</title>
</head>
<body>
    <header>
        <h1>Registration</h1>
{#        {% include 'header.twig' %}#}
    </header>

    <main>
        <div>Hello twig Reg</div>
        <form>
            <div>
                <label for="login">
                    <span>Please enter login:</span>
                    <input type="text" id="login" name="login" required minlength="6">
{#                    <span class="error" aria-live="polite"></span>#}
                </label>
            </div>
            <div>
                <label for="password">
                    <span>Please enter password:</span>
                    <input type="text" id="password" name="password" required minlength="6">
                </label>
            </div>
            <div>
                <label for="password_confirm">
                    <span>Please confirm password:</span>
                    <input type="text" id="password_confirm" name="password_confirm" required minlength="6">
                </label>
            </div>
            <div>
                <label for="mail">
                    <span>Please enter an email address:</span>
                    <input type="email" id="mail" name="mail" required>
                </label>
            </div>
            <div>
                <label for="name">
                    <span>Please enter name:</span>
                    <input type="text" id="name" name="name" required minlength="2">
                </label>
            </div>
            <button>Submit</button>
        </form>

    </main>

    <footer>
{#        {% include 'footer.twig' %}#}
    </footer>
</body>
</html>